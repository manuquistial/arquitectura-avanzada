# =============================================================================
# Azure Ingestion Service - Environment Variables Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# This file contains all environment variables needed for the ingestion service

# =============================================================================
# DATABASE CONFIGURATION (Azure PostgreSQL)
# =============================================================================
# Database connection parameters (prefixed with DB_)
DB_HOST=mock-postgres-host.database.azure.com
DB_PORT=5432
DB_NAME=carpeta_ciudadana
DB_USER=mock_user
DB_PASSWORD=mock_password_123
DB_SSLMODE=require

# Alternative: Use full DATABASE_URL (overrides individual DB_ parameters)
# DATABASE_URL=postgresql+psycopg://mock_user:mock_password_123@mock-postgres-host.database.azure.com:5432/carpeta_ciudadana?sslmode=require

# =============================================================================
# AZURE STORAGE CONFIGURATION (Blob Storage)
# =============================================================================
# Azure Storage account configuration (prefixed with AZURE_STORAGE_)
AZURE_STORAGE_ACCOUNT_NAME=mock_storage_account
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_STORAGE_ACCOUNT_KEY=mock_storage_key_123
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=mock_storage_account;AccountKey=mock_storage_key_123;EndpointSuffix=core.windows.net
AZURE_STORAGE_SAS_TTL_MINUTES=15

# =============================================================================
# AZURE SERVICE BUS CONFIGURATION (Event Bus)
# =============================================================================
# Service Bus configuration (prefixed with SERVICEBUS_)
SERVICEBUS_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your_key_here
SERVICEBUS_ENABLED=true
SERVICEBUS_NAMESPACE=your-namespace


# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=https://carpetaciudadana.com,https://app.carpetaciudadana.com

# File upload settings
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png

# Health check settings
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# KUBERNETES CONFIGURATION (for production deployment)
# =============================================================================
# Kubernetes pod information (for logging and monitoring)
# These are automatically set by Kubernetes
POD_NAME=ingestion-service
POD_NAMESPACE=carpeta-ciudadana
NODE_NAME=aks-nodepool-user

# =============================================================================
# AZURE WORKLOAD IDENTITY (for production)
# =============================================================================
# Azure Workload Identity configuration
AZURE_CLIENT_ID=mock_client_id_123
AZURE_TENANT_ID=mock_tenant_id_123

# =============================================================================
# DEVELOPMENT CONFIGURATION (NOT USED IN KUBERNETES)
# =============================================================================
# For local development only - these are not used in Kubernetes deployment
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# CORS_ORIGINS=http://localhost:3000,http://localhost:8000