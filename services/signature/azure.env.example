# =============================================================================
# SIGNATURE SERVICE - Environment Variables
# =============================================================================
# Servicio de firma digital y autenticaci√≥n de documentos
# Carpeta Ciudadana - Azure Implementation
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Kubernetes metadata (automatically set in K8s)
POD_NAME=
POD_NAMESPACE=
NODE_NAME=

# Azure Workload Identity (automatically set in K8s)
AZURE_CLIENT_ID=
AZURE_TENANT_ID=

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# DATABASE CONFIGURATION (Azure PostgreSQL)
# =============================================================================
# Primary database connection
DB_HOST=mock-postgres-host.database.azure.com
DB_PORT=5432
DB_NAME=carpeta_ciudadana
DB_USER=mock_user
DB_PASSWORD=mock_password_123
DB_SSLMODE=require

# Alternative: Full database URL (overrides individual settings)
# DATABASE_URL=postgresql+psycopg://mock_user:mock_password_123@mock-postgres-host.database.azure.com:5432/carpeta_ciudadana?sslmode=require

# =============================================================================
# AZURE STORAGE CONFIGURATION
# =============================================================================
# Azure Blob Storage for document storage and SAS tokens
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-storage-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_SAS_TTL_MINUTES=15

# =============================================================================
# AZURE SERVICE BUS CONFIGURATION
# =============================================================================
# Azure Service Bus for event publishing
SERVICEBUS_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key
SERVICEBUS_NAMESPACE=your-namespace
SERVICEBUS_ENABLED=true

# =============================================================================
# CRYPTOGRAPHIC CONFIGURATION
# =============================================================================
# RSA Private Key for document signing
SIGNING_PRIVATE_KEY_PATH=/secrets/private-key.pem
SIGNING_ALGORITHM=RS256

# =============================================================================
# MINTIC HUB CONFIGURATION
# =============================================================================
# MinTIC Hub integration (public API, no authentication)
MINTIC_HUB_URL=https://mock-mintic-hub.example.com
MINTIC_OPERATOR_ID=operator-demo
MINTIC_OPERATOR_NAME=Carpeta Ciudadana Demo

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis for idempotency cache and locks
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false

# =============================================================================
# INTERNAL SERVICES CONFIGURATION
# =============================================================================
# Internal service URLs (Kubernetes service names)
METADATA_SERVICE_URL=http://metadata:8000

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment for local development
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=carpeta_ciudadana_dev
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_SSLMODE=disable
# AZURE_STORAGE_ACCOUNT_NAME=
# AZURE_STORAGE_ACCOUNT_KEY=
# SERVICEBUS_ENABLED=false
# REDIS_HOST=localhost
# REDIS_PORT=6379
