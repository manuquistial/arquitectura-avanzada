# Este archivo contiene variables de entorno para PRODUCCIÓN
# Uso: direnv allow (requiere direnv instalado)
# DO NOT COMMIT your real .envrc (see .gitignore)
export TF_VAR_aks_kubernetes_version="1.32.7"

# Core context
export TF_VAR_environment="production"
export TF_VAR_azure_region="eastus"
export TF_VAR_project_name="carpeta-ciudadana"

# PostgreSQL (required)
export TF_VAR_db_admin_username="psqladmin"
export TF_VAR_db_admin_password="CarpetaCiudadana2024!Secure"

# cert-manager (required for issuance if enable_tls true)
export TF_VAR_letsencrypt_email="<EMAIL>"

# OpenSearch (required)
export TF_VAR_opensearch_username="admin"
export TF_VAR_opensearch_password="CarpetaCiudadana2024!Secure"

# Optional overrides
# export TF_VAR_domain_name=""
