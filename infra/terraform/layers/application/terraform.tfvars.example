# =============================================================================
# APPLICATION LAYER - TERRAFORM VARIABLES EXAMPLE
# =============================================================================
# Copia este archivo como terraform.tfvars y configura los valores
# =============================================================================

# =============================================================================
# VARIABLES COMPARTIDAS
# =============================================================================

# Azure Configuration
azure_region = "westus2"
azure_subscription_id = "your-subscription-id"
environment = "production"
project_name = "carpeta-ciudadana"

# Security Configuration
security_contact_phone = "+1-555-0123"

# DNS Configuration
dns_zone_name = "carpeta-ciudadana.dev"
app_subdomain = "app"

# =============================================================================
# VARIABLES ESPEC√çFICAS DE APPLICATION LAYER
# =============================================================================

# KEDA Configuration
keda_version = "2.12.0"
keda_namespace = "keda"
keda_replica_count = 1

# cert-manager Configuration
cert_manager_version = "v1.13.0"
cert_manager_namespace = "cert-manager"
cert_manager_replica_count = 1

# OpenSearch Configuration
opensearch_enabled = true
opensearch_version = "2.11.0"
opensearch_namespace = "opensearch"
opensearch_replica_count = 1
opensearch_storage_size = "10Gi"

# Front Door Configuration
frontdoor_enabled = true
frontdoor_frontend_hostname = "app.carpeta-ciudadana.dev"
frontdoor_api_hostname = "api.carpeta-ciudadana.dev"
frontdoor_enable_waf = true

# Application Secrets Configuration
nextauth_url = "https://app.carpeta-ciudadana.dev"