{
  "dashboard": {
    "title": "Carpeta Ciudadana - Overview General",
    "tags": ["carpeta-ciudadana", "overview", "production"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üéØ SLI - Service Availability",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "avg(up{job=~\".*carpeta.*\"}) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            },
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "title": "‚ö° Request Rate (req/s)",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_total{job=~\".*carpeta.*\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "‚ùå Error Rate (%)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "(sum(rate(http_server_requests_total{job=~\".*carpeta.*\",status_code=~\"5..\"}[5m])) / sum(rate(http_server_requests_total{job=~\".*carpeta.*\"}[5m]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            },
            "decimals": 3
          }
        }
      },
      {
        "id": 4,
        "title": "‚è±Ô∏è P95 Latency (ms)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_bucket{job=~\".*carpeta.*\"}[5m])) by (le)) * 1000",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 500, "color": "yellow"},
                {"value": 2000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "üìä Request Rate by Service",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_total[5m])) by (service_name)",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "title": "üêõ Error Rate by Service",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_total{status_code=~\"5..\"}[5m])) by (service_name)",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 7,
        "title": "‚è±Ô∏è Latency Distribution (P50, P95, P99)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_server_request_duration_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_server_request_duration_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 8,
        "title": "üî• Top 10 Slowest Endpoints",
        "type": "table",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum(rate(http_server_request_duration_bucket[5m])) by (le, service_name, http_route)) * 1000)",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "service_name": "Service",
                "http_route": "Endpoint",
                "Value": "P95 Latency (ms)"
              }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "üíæ Database Connection Pool",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 20, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "sum(db_connection_pool_active) by (service_name)",
            "legendFormat": "{{service_name}} - Active",
            "refId": "A"
          },
          {
            "expr": "sum(db_connection_pool_idle) by (service_name)",
            "legendFormat": "{{service_name}} - Idle",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "title": "üîÑ Redis Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"x": 8, "y": 20, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "(sum(rate(redis_cache_hits_total[5m])) / (sum(rate(redis_cache_hits_total[5m])) + sum(rate(redis_cache_misses_total[5m])))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "üì® Service Bus Queue Depth",
        "type": "timeseries",
        "gridPos": {"x": 16, "y": 20, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "sum(servicebus_queue_messages_active) by (queue_name)",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 12,
        "title": "‚ò∏Ô∏è Pod Status by Service",
        "type": "table",
        "gridPos": {"x": 0, "y": 26, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{namespace=\"carpeta-ciudadana-dev\"}) by (pod, phase)",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ]
      },
      {
        "id": 13,
        "title": "üíª Node Resource Usage",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 26, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "100 - (avg by (node) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{node}} - CPU",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{node}} - Memory",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100
          }
        }
      },
      {
        "id": 14,
        "title": "üéØ SLO Compliance (30d)",
        "type": "table",
        "gridPos": {"x": 0, "y": 32, "w": 24, "h": 6},
        "targets": [
          {
            "expr": "avg_over_time(up{job=~\".*carpeta.*\"}[30d]) * 100",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "job": "Service",
                "Value": "Availability %"
              }
            }
          }
        ]
      }
    ]
  }
}

