{
  "dashboard": {
    "title": "Hub Protection (Rate Limit & Circuit Breakers)",
    "description": "Monitor MinTIC hub rate limiting and circuit breaker states",
    "tags": ["mintic", "hub", "rate-limit", "circuit-breaker", "protection"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Hub Rate Limit - Requests Per Minute",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hub_rate_limit_exceeded_total[1m])",
            "legendFormat": "{{endpoint}} - exceeded",
            "refId": "A"
          },
          {
            "expr": "hub_rate_limit_remaining",
            "legendFormat": "{{endpoint}} - remaining",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Requests/min",
            "format": "short"
          }
        ],
        "alert": {
          "name": "Hub Rate Limit Exceeded",
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "message": "Hub rate limit exceeded more than 5 times in last 5 minutes"
        }
      },
      {
        "id": 2,
        "title": "Hub Rate Limit - Current Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "hub_rate_limit_remaining{endpoint='registerCitizen'}",
            "legendFormat": "registerCitizen"
          },
          {
            "expr": "hub_rate_limit_remaining{endpoint='authenticateDocument'}",
            "legendFormat": "authenticateDocument"
          },
          {
            "expr": "hub_rate_limit_remaining{endpoint='unregisterCitizen'}",
            "legendFormat": "unregisterCitizen"
          }
        ],
        "thresholds": [
          {
            "value": 0,
            "color": "red"
          },
          {
            "value": 3,
            "color": "yellow"
          },
          {
            "value": 7,
            "color": "green"
          }
        ]
      },
      {
        "id": 3,
        "title": "Circuit Breaker States",
        "type": "stat",
        "targets": [
          {
            "expr": "hub_cb_open{endpoint='registerCitizen'}",
            "legendFormat": "registerCitizen"
          },
          {
            "expr": "hub_cb_open{endpoint='authenticateDocument'}",
            "legendFormat": "authenticateDocument"
          },
          {
            "expr": "hub_cb_open{endpoint='unregisterCitizen'}",
            "legendFormat": "unregisterCitizen"
          },
          {
            "expr": "hub_cb_open{endpoint='getOperators'}",
            "legendFormat": "getOperators"
          }
        ],
        "mappings": [
          {
            "value": 0,
            "text": "CLOSED",
            "color": "green"
          },
          {
            "value": 1,
            "text": "OPEN",
            "color": "red"
          },
          {
            "value": 0.5,
            "text": "HALF_OPEN",
            "color": "yellow"
          }
        ]
      },
      {
        "id": 4,
        "title": "Hub Operations Queued for Retry",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hub_operations_queued_total[5m])",
            "legendFormat": "{{endpoint}} - {{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Operations/sec",
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "title": "Hub Protection - Status Summary",
        "type": "table",
        "targets": [
          {
            "expr": "hub_rate_limit_remaining",
            "format": "table",
            "refId": "A"
          },
          {
            "expr": "hub_cb_open",
            "format": "table",
            "refId": "B"
          }
        ],
        "transformations": [
          {
            "id": "merge"
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {
                "endpoint": 0,
                "Value #A": 1,
                "Value #B": 2
              },
              "renameByName": {
                "endpoint": "Endpoint",
                "Value #A": "Rate Limit Remaining",
                "Value #B": "Circuit Breaker State"
              }
            }
          }
        ]
      },
      {
        "id": 6,
        "title": "Hub Call Success Rate (after protection)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hub_calls_total{success='true'}[5m]) / rate(hub_calls_total[5m])",
            "legendFormat": "{{endpoint}} - success rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Success Rate",
            "format": "percentunit",
            "min": 0,
            "max": 1
          }
        ]
      },
      {
        "id": 7,
        "title": "Hub Latency Distribution (successful calls)",
        "type": "heatmap",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(hub_latency_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(hub_latency_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "B"
          }
        ]
      },
      {
        "id": 8,
        "title": "Rate Limit vs Circuit Breaker Triggers",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(hub_rate_limit_exceeded_total)",
            "legendFormat": "Rate Limit Exceeded"
          },
          {
            "expr": "sum(hub_cb_open)",
            "legendFormat": "Circuit Breaker Open"
          }
        ]
      },
      {
        "id": 9,
        "title": "Hub Call Success Rate (by endpoint)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(hub_calls_total{success='true'}[5m]) / rate(hub_calls_total[5m])",
            "legendFormat": "{{endpoint}} - success rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "Success Rate",
            "min": 0,
            "max": 1
          }
        ],
        "thresholds": [
          {
            "value": 0.95,
            "color": "green"
          },
          {
            "value": 0.90,
            "color": "yellow"
          },
          {
            "value": 0,
            "color": "red"
          }
        ]
      },
      {
        "id": 10,
        "title": "Hub Latency p95 (by endpoint)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(hub_latency_bucket[5m]))",
            "legendFormat": "{{endpoint}} - p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(hub_latency_bucket[5m]))",
            "legendFormat": "{{endpoint}} - p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ],
        "alert": {
          "name": "High Hub Latency",
          "conditions": [
            {
              "evaluator": {
                "params": [2],
                "type": "gt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "message": "Hub p95 latency > 2s for 5 minutes"
        }
      },
      {
        "id": 11,
        "title": "Hub Status Code Distribution",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(hub_status_codes_total{status_class='2xx'}[5m])",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "rate(hub_status_codes_total{status_class='4xx'}[5m])",
            "legendFormat": "4xx Client Error",
            "refId": "B"
          },
          {
            "expr": "rate(hub_status_codes_total{status_class='5xx'}[5m])",
            "legendFormat": "5xx Server Error",
            "refId": "C"
          },
          {
            "expr": "rate(hub_status_codes_total{status_class='timeout'}[5m])",
            "legendFormat": "Timeout/Network Error",
            "refId": "D"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 12,
        "title": "Specific Status Codes (501, 204)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 24, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(hub_status_codes_total{status_code='501'}[1h]))",
            "legendFormat": "501 Invalid Parameters (1h)"
          },
          {
            "expr": "sum(increase(hub_status_codes_total{status_code='204'}[1h]))",
            "legendFormat": "204 No Content (1h)"
          },
          {
            "expr": "sum(increase(hub_status_codes_total{status_code='202'}[1h]))",
            "legendFormat": "202 Queued (1h)"
          }
        ],
        "thresholds": [
          {
            "value": 0,
            "color": "green"
          },
          {
            "value": 10,
            "color": "yellow"
          },
          {
            "value": 50,
            "color": "red"
          }
        ]
      },
      {
        "id": 13,
        "title": "Circuit Breaker Opens Over Time",
        "type": "graph",
        "gridPos": {"x": 18, "y": 24, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "changes(hub_cb_open{endpoint=~'.+'}[5m])",
            "legendFormat": "{{endpoint}} - state changes",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "State Changes"
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(up{job='mintic-client'}[1m]) > 0",
          "tagKeys": "service",
          "textFormat": "Deployment",
          "iconColor": "blue"
        }
      ]
    }
  }
}

