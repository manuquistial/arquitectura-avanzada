{
  "dashboard": {
    "title": "Carpeta Ciudadana - Transfers Saga",
    "tags": ["carpeta-ciudadana", "transfer", "saga"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Transfer Saga Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(external_call_duration_bucket{external_service=\"transfer\"}[5m])) by (le, external_endpoint))",
            "legendFormat": "{{external_endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration (seconds)"
          }
        ],
        "alert": {
          "name": "Transfer Intra-Region Latency",
          "conditions": [
            {
              "evaluator": {
                "params": [2],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "1m",
          "message": "Transfer p95 > 2s (intra-region threshold)",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": "Transfer Inter-Region Latency (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(external_call_duration_bucket{external_service=\"transfer\",external_region!=\"northcentralus\"}[5m])) by (le))",
            "legendFormat": "Inter-region p95",
            "refId": "A"
          }
        ],
        "alert": {
          "name": "Transfer Inter-Region Latency",
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "1m",
          "message": "Transfer p95 > 5s (inter-region threshold)",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "Transfer Success Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(queue_message_consumed{queue_name=\"transfer-confirmed\"}[5m])) / sum(rate(queue_message_published{queue_name=\"transfer-requested\"}[5m])) * 100",
            "legendFormat": "Success Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Success Rate"
          }
        ]
      },
      {
        "id": 4,
        "title": "Transfer Saga Steps",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(queue_message_published[5m])) by (queue_name)",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Circuit Breaker State",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "circuit_breaker_state{service=\"transfer\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "justifyMode": "auto",
          "textMode": "auto"
        },
        "mappings": [
          {
            "type": "value",
            "options": {
              "0": {"text": "CLOSED", "color": "green"},
              "1": {"text": "OPEN", "color": "red"},
              "2": {"text": "HALF_OPEN", "color": "orange"}
            }
          }
        ]
      },
      {
        "id": 6,
        "title": "Transfer Compensation (Rollbacks)",
        "type": "graph",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(saga_compensation_executed[5m]))",
            "legendFormat": "Rollbacks/sec",
            "refId": "A"
          }
        ]
      }
    ]
  }
}

