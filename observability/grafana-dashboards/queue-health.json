{
  "dashboard": {
    "title": "Carpeta Ciudadana - Queue Health",
    "tags": ["carpeta-ciudadana", "queue", "servicebus"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Messages Published vs Consumed",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(queue_message_published[1m])) by (queue_name)",
            "legendFormat": "Published - {{queue_name}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(queue_message_consumed[1m])) by (queue_name)",
            "legendFormat": "Consumed - {{queue_name}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "msgps",
            "label": "Messages/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "Dead Letter Queue Length",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "queue_dlq_length",
            "legendFormat": "{{queue_name}} DLQ",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Messages in DLQ"
          }
        ],
        "alert": {
          "name": "Messages in DLQ",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "1m",
          "message": "More than 10 messages in DLQ",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "Failed Message Processing",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(queue_message_failed[5m])) by (queue_name)",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Queue Processing Latency",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(queue_processing_duration_bucket[5m])) by (le, queue_name))",
            "legendFormat": "{{queue_name}} - p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Processing Time (seconds)"
          }
        ]
      },
      {
        "id": 5,
        "title": "Queue Backlog (age of oldest message)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "queue_oldest_message_age_seconds",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Age (seconds)"
          }
        ]
      }
    ]
  }
}

