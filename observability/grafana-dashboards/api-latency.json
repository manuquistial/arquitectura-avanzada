{
  "dashboard": {
    "title": "Carpeta Ciudadana - API Latency",
    "tags": ["carpeta-ciudadana", "latency", "performance"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_bucket[5m])) by (le, service_name, http_route))",
            "legendFormat": "{{service_name}} - {{http_route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency (seconds)"
          }
        ],
        "alert": {
          "name": "High API Latency",
          "conditions": [
            {
              "evaluator": {
                "params": [2],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "1m",
          "message": "API latency p95 > 2s for 5 minutes",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Duration by Service (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_server_request_duration_bucket[5m])) by (le, service_name))",
            "legendFormat": "{{service_name}} - p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_bucket[5m])) by (le, service_name))",
            "legendFormat": "{{service_name}} - p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_server_request_duration_bucket[5m])) by (le, service_name))",
            "legendFormat": "{{service_name}} - p99",
            "refId": "C"
          }
        ]
      },
      {
        "id": 3,
        "title": "HTTP Error Rate (5xx)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_server_error_count[5m])) by (service_name) / sum(rate(http_server_request_count[5m])) by (service_name) * 100",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Error Rate"
          }
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [1],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "1m",
          "message": "Error rate > 1% for 2 minutes",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "External API Call Duration",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(external_call_duration_bucket[5m])) by (le, external_service))",
            "legendFormat": "{{external_service}} - p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency (seconds)"
          }
        ]
      },
      {
        "id": 5,
        "title": "Request Rate by Service",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_server_request_count[1m])) by (service_name)",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 6,
        "title": "Rate Limit Exceeded",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(rate_limit_exceeded[5m])) by (http_route)",
            "legendFormat": "{{http_route}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}

