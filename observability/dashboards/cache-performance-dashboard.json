{
  "dashboard": {
    "title": "Cache Performance",
    "tags": ["carpeta-ciudadana", "cache", "redis"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Cache Hit Rate (%)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(cache_hits_total[5m])) / (sum(rate(cache_hits_total[5m])) + sum(rate(cache_misses_total[5m])))) * 100",
            "legendFormat": "Hit Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Cache Hit Rate by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(cache_hits_total[5m])) by (service) / (sum(rate(cache_hits_total[5m])) by (service) + sum(rate(cache_misses_total[5m])) by (service))) * 100",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Cache Operations Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(cache_hits_total[5m]))",
            "legendFormat": "Hits",
            "refId": "A"
          },
          {
            "expr": "sum(rate(cache_misses_total[5m]))",
            "legendFormat": "Misses",
            "refId": "B"
          },
          {
            "expr": "sum(rate(cache_sets_total[5m]))",
            "legendFormat": "Sets",
            "refId": "C"
          }
        ]
      },
      {
        "id": 4,
        "title": "Cache Size & Evictions",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "cache_size_bytes",
            "legendFormat": "Size (bytes)",
            "refId": "A"
          },
          {
            "expr": "rate(cache_evictions_total[5m])",
            "legendFormat": "Evictions/s",
            "refId": "B"
          }
        ]
      },
      {
        "id": 5,
        "title": "Average Cache Latency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(cache_operation_duration_seconds_bucket[5m])) by (operation, le))",
            "legendFormat": "{{operation}} p95",
            "refId": "A"
          }
        ]
      }
    ]
  }
}

