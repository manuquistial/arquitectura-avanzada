{
  "dashboard": {
    "title": "Service Health & Errors",
    "tags": ["carpeta-ciudadana", "health", "errors"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Status Codes Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"carpeta-services\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Error Rate by Service (%)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{job=\"carpeta-services\",status_code=~\"[45]..\"}[5m])) by (service) / sum(rate(http_requests_total{job=\"carpeta-services\"}[5m])) by (service)) * 100",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Service Availability (%)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "(1 - (sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m])))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "unit": "percent"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "red"},
            {"value": 95, "color": "yellow"},
            {"value": 99, "color": "green"}
          ]
        }
      },
      {
        "id": 4,
        "title": "Dead Letter Queue Messages",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(servicebus_dlq_message_count) by (queue_name)",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "alert": {
          "name": "DLQ Messages Accumulating",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [10]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "last"},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "green"},
            {"value": 1, "color": "yellow"},
            {"value": 2, "color": "red"}
          ]
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "CLOSED"},
              {"type": "value", "value": "1", "text": "OPEN"},
              {"type": "value", "value": "2", "text": "HALF_OPEN"}
            ]
          }
        }
      }
    ]
  }
}

