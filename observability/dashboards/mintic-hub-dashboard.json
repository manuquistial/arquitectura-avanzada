{
  "dashboard": {
    "title": "MinTIC Hub Integration",
    "tags": ["carpeta-ciudadana", "mintic", "hub"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Hub API Calls Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(hub_api_calls_total[5m])) by (operation)",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Hub API Success Rate (%)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(hub_api_calls_total{status=\"success\"}[5m])) / sum(rate(hub_api_calls_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "percent"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "red"},
            {"value": 90, "color": "yellow"},
            {"value": 99, "color": "green"}
          ]
        }
      },
      {
        "id": 3,
        "title": "Hub API Latency p95",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(hub_api_duration_seconds_bucket[5m])) by (operation, le))",
            "legendFormat": "{{operation}} p95",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Hub API Errors by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(hub_api_calls_total{status=\"error\"}[5m])) by (error_type)",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Rate Limiter Drops",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(hub_rate_limit_drops_total[5m]))",
            "legendFormat": "Dropped requests",
            "refId": "A"
          }
        ],
        "alert": {
          "name": "High Rate Limit Drops",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [5]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"},
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Hub Connection Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "hub_connection_healthy",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "red"},
            {"value": 1, "color": "green"}
          ]
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "UNHEALTHY"},
              {"type": "value", "value": "1", "text": "HEALTHY"}
            ]
          }
        }
      }
    ]
  }
}

